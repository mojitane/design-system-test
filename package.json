{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\" --ignore-path .gitignore",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "preview-storybook": "turbo run preview-storybook",
    "ci:publish": "turbo run build && pnpm -r publish --no-git-checks && changeset tag",
    "ci:check": "turbo run lint type-check && pnpm format:check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.26.0",
  "name": "design-system"
}
